<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EspPreference">
        <attr name="titleColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="ColorView">
        <attr name="shape" format="integer">
            <enum name="circle" value="-1" />
            <enum name="rectangle" value="-2" />
        </attr>
        <attr name="color" format="reference|color" />
        <attr name="drawShadow" format="boolean" />
        <attr name="shadowColor1" format="reference|color" />
        <attr name="shadowColor2" format="reference|color" />
    </declare-styleable>
</resources>