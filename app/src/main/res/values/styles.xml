<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="AppThemeDark" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/esp_actionbar_color</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NoTitleBar" parent="android:Theme.Holo.NoActionBar"></style>

    <style name="FullScreen" parent="android:Theme.Holo.NoActionBar.Fullscreen"></style>

    <style name="LoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColorHint">@color/esp_text_hint_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">15dip</item>
        <item name="android:background">@drawable/esp_edit_underline_bg</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="YellowButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">75dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:background">@drawable/esp_button_yellow</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="RegisterEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:drawablePadding">15dip</item>
        <item name="android:background">@drawable/esp_edit_round_bg</item>
        <item name="android:textColorHint">@color/esp_text_hint_color</item>
        <item name="android:textSize">19sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="BlueButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">75dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:background">@drawable/esp_button_blue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WeekCheckBox">
        <item name="android:layout_margin">5dip</item>
        <item name="android:padding">5dip</item>
        <item name="android:background">@drawable/esp_checked_blue_background</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/esp_week_text_color</item>
    </style>

    <style name="TransparentBgDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EspButtonKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">80dip</item>
        <item name="android:minHeight">80dip</item>
    </style>

    <style name="MainDrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">5dip</item>
        <item name="android:drawablePadding">15dip</item>
        <item name="android:background">@drawable/esp_activity_icon_background</item>
    </style>
</resources>